@using Microsoft.AspNetCore.Components.Authorization

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["DataMonitoringSys.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            900: '#1e3a8a'
                        }
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-gray-50">
    <CascadingAuthenticationState>
        <Routes />
    </CascadingAuthenticationState>
    <div id="blazor-error-ui" class="fixed bottom-0 w-full bg-red-600 text-white p-4 hidden">
        <div class="container mx-auto flex justify-between items-center">
            <span>An unhandled error has occurred. <a href="" class="underline font-semibold">Reload</a></span>
            <button class="text-white hover:text-gray-200" onclick="document.getElementById('blazor-error-ui').style.display='none'">
                ✕
            </button>
        </div>
    </div>
    <script src="_framework/blazor.web.js"></script>
    <script src="charts.js"></script>
</body>

</html>
